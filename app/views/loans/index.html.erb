<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Préstamos</h2>
    <ol class="breadcrumb">
      <li>
        <a>Contabilidad</a>
      </li>
      <li class="active">
        <strong>Préstamos</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight ecommerce">


  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">

          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
            <thead>
            <tr>

              <th>Empleado</th>
              <th>Monto Prestado</th>
              <th>Plazo</th>
              <th>Tasa de Interés</th>
              <th>Monto Total</th>
              <th>Fecha de Préstamo</th>
              <th>Monto Pagado</th>
              <th>Mensualidad Actual</th>
              <th colspan="3" class="text-center">Acciones</th>

            </tr>
            </thead>
            <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <td><%= loan.employer.nil? ? 'Desconocido' : loan.employer.full_name %></td>
                <td>$<%= number_with_delimiter(loan.amount.to_f, :delimiter => ',', :precision => 2) %></td>
                <td><%= loan.monthly_term %></td>
                <td><%= loan.interest %>%</td>
                <td>$<%= number_with_delimiter(loan.total_amount.to_f, :delimiter => ',', :precision => 2) %></td>
                <td><%= loan.loan_date %></td>
                <td>$<%= number_with_delimiter(loan.amount_paid.to_f, :delimiter => ',', :precision => 2) %></td>
                <td><%= loan.current_month %></td>
                <td class="text-center">
                  <div class="btn-group">
                    <button class="btn-info btn btn-xs">Abonar</button>
                    <%= link_to 'Editar', edit_loan_path(loan), class: 'btn-warning btn btn-xs' %>
                    <%= link_to 'Eliminar', loan, method: :delete, class: 'btn-danger btn btn-xs',
                                data: {confirm: 'Are you sure?'} %>
                  </div>
                </td>
                <td></td>
              </tr>
            <% end %>

            </tbody>
            <tfoot>
            <tr>
              <td colspan="9">
                <ul class="pagination pull-right"></ul>
              </td>
            </tr>
            </tfoot>
          </table>

        </div>
        <div class="ibox-footer">
          <div style="margin: 10px 10px 10px 10px;">
            <%= link_to 'Nuevo Prestamo', new_loan_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>
<% content_for :javascript do %>

  <script type="text/javascript">


      $(function () {

          $('.footable').footable();

      });

  </script>

<% end %>


