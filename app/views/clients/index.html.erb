<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Clientes</h2>
    <ol class="breadcrumb">
      <li>
        <a>Contactos</a>
      </li>
      <li class="active">
        <strong>Clientes</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div class="col-sm-12">
      <div class="ibox">
        <div class="ibox-content">

          <div class="clients-list">
            <ul class="nav nav-tabs">
              <span class="pull-right small text-muted"><%= @natural_clients.size %> Elements</span>
              <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> Personas Fisicas</a></li>
              <li class=""><a data-toggle="tab" href="#tab-2"><i class="fa fa-briefcase"></i> Personas Morales</a></li>
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <div class="full-height-scroll">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <tbody>
                      <tr>
                        <td colspan="8"><%= link_to 'Agregar Cliente', new_client_path, class: 'btn btn-block btn-primary' %></td>
                      </tr>
                      <% @natural_clients.each do |client| %>
                        <tr>
                          <td><%= link_to client.full_name, client, class: 'client-link' %></td>
                          <td><i class="fa fa-flag"></i> <%= client.full_address %></td>
                          <td class="contact-type"><i class="fa fa-envelope"> </i></td>
                          <td><%= client.contact_email %></td>
                          <td class="contact-type"><i class="fa fa-phone"> </i></td>
                          <td><%= client.contact_phone %></td>
                          <td class="text-center">
                            <div class="btn-group">
                              <%= link_to 'Editar', edit_client_path(client), class: 'btn-info btn btn-xs', style: 'width: 65px' %>
                              <%= link_to 'Destroy', client, method: :delete, class: 'btn-danger btn btn-xs',
                                          style: 'width: 65px', data: {confirm: 'Are you sure?'} %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div id="tab-2" class="tab-pane">
                <div class="full-height-scroll">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <tr>
                        <td colspan="8"><%= link_to 'Agregar Cliente', new_client_path, class: 'btn btn-block btn-primary' %></td>
                      </tr>
                      <% @legal_clients.each do |client| %>
                        <tr>
                          <td><%= link_to client.full_name, client, class: 'client-link' %></td>
                          <td><i class="fa fa-flag"></i> <%= client.full_address %></td>
                          <td class="contact-type"><i class="fa fa-envelope"> </i></td>
                          <td><%= client.contact_email %></td>
                          <td class="contact-type"><i class="fa fa-phone"> </i></td>
                          <td><%= client.contact_phone %></td>
                          <td class="text-center">
                            <div class="btn-group">
                              <%= link_to 'Editar', edit_client_path(client), class: 'btn-info btn btn-xs', style: 'width: 65px' %>
                              <%= link_to 'Destroy', client, method: :delete, class: 'btn-danger btn btn-xs',
                                          style: 'width: 65px', data: {confirm: 'Are you sure?'} %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
