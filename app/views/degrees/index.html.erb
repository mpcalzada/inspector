<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h1>Degrees</h1>
  </div>
  <div class="ibox-content">
    <div class="container">
      <div class="col-md-6 col-sm-12">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th align="right">Description</th>
            <th colspan="2">Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @degrees.each do |degree| %>
              <tr>
                <td><%= degree.description %></td>
                <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_degree_path(degree), {class: 'btn btn-warning btn-xs'} %></td>
                <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, degree, {class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: 'Are you sure?'}} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="ibox-footer">
    <div>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        Create Degree
      </button>
    </div>
    <div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
          <%= form_with(model: Degree.new, local: true) do |form| %>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-sitemap modal-icon"></i>
                <h4 class="modal-title">Create Degree</h4>
              </div>
              <div class="modal-body">
                <div class="field">
                  <%= form.label :description %>
                  <%= form.text_field :description %>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                <%= form.submit 'Save', {class: 'btn btn-primary'} %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>