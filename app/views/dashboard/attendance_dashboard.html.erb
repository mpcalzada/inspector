<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Dashboard Asistencia</h2>
    <ol class="breadcrumb">
      <li>
        <a>Asistencia</a>
      </li>
      <li class="active">
        <strong>Dashboard</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">

    <div class="row">
      <div class="col-lg-4">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <span class="label label-danger pull-right">Mensual (<%= @period.strftime('%d-%b') %>
              - <%= Date.today.strftime('%d-%b') %>)</span>
            <h5>Top 10 Impuntualidad</h5>
          </div>
          <div class="ibox-content">
            <table class="table table-hover no-margins">
              <thead>
              <tr>
                <th>Empleado</th>
                <th>Retrasos</th>
                <th>Entrada Promedio</th>
              </tr>
              </thead>
              <tbody>
              <% @top_delayed.each do |name, delays| %>
                <tr>
                  <td class="font-bold"><i class="fa fa-level-down text-danger"></i> <%= name %></td>
                  <td><%= delays %></td>
                  <td><i class="fa fa-clock-o"></i> -</td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <span class="label label-success pull-right">Mensual (<%= @period.strftime('%d-%b') %>
              - <%= Date.today.strftime('%d-%b') %>)</span>
            <h5>Top 10 Puntualidad</h5>
          </div>
          <div class="ibox-content">
            <table class="table table-hover no-margins">
              <thead>
              <tr>
                <th>Empleado</th>
                <th>Entradas Puntuales</th>
                <th>Horario Promedio</th>
              </tr>
              </thead>
              <tbody>
              <% @top_punctual.each do |name, delays| %>
                <tr>
                  <td class="font-bold"><i class="fa fa-level-up text-navy"></i> <%= name %></td>
                  <td><%= delays %></td>
                  <td><i class="fa fa-clock-o"></i> -</td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
