<div class="col-lg-7">
  <div class="ibox float-e-margins m-t-none m-b">
    <div class="ibox-title">
      <h2 class="m-t-none m-b">Sign up</h2>
    </div>
    <div class="ibox-content">
      <div class="row">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <div class="col-md-4">
                <%= f.label 'Usuario' %>
              </div>
              <div class="col-md-8">
                <%= f.text_field :username, class: 'form-control', requiered: true, autocomplete: 'off' %>
              </div>
            </div>


            <div class="form-group">
              <div class="col-md-4">
                <%= f.label :email %>
              </div>
              <div class="col-md-8">
                <%= f.email_field :email, class: 'form-control', requiered: true, autocomplete: 'off' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-4">
                <%= f.label 'ContraseÃ±a' %>
              </div>
              <div class="col-md-8">
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br/>
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control', requiered: true %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-4">
                <%= f.label 'Repetir ContraseÃ±a' %>
              </div>
              <div class="col-md-8">
                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', requiered: true %>
              </div>
            </div>

            <br><br>

            <div class="col-md-offset-7">
              <div class="row actions">
                <%= f.submit 'Sign up', class: 'btn btn-success' %>
                <%= render 'devise/shared/links' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>